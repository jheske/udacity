<!-- Main container holds Title, Play Details container, Overview, and Trailer container -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.nano.movies.activities.MovieDetailFragment">
    <!-- Movie title -->
    <TextView
        android:id="@+id/tv_movie_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/margin_20"
        android:background="@color/colorMovieTitle"
        android:textSize="40sp"
        android:text="@string/hello_world" />
    <!-- Container holding thumbnail and play details container -->
    <LinearLayout
        android:id="@+id/movie_details_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_marginTop="@dimen/margin_40"
        android:layout_marginLeft="40dp"
        android:orientation="horizontal">
        <!-- Thumbnail sized image of poster -->
        <ImageView
            android:id="@+id/img_thumbnail"
            android:adjustViewBounds="true"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"/>
        <!-- Play details container hold release year, runtime,
             viewer rating, and favorites button -->
        <LinearLayout
            android:id="@+id/play_details"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_marginLeft="@dimen/margin_20"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_release_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_release_year"/>
            <TextView
                android:id="@+id/tv_runtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_running_time"/>
            <TextView
                android:id="@+id/tv_viewer_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_viewer_rating"/>
            <Button
                android:id="@+id/btn_mark_fav"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/label_mark_fav"/>
        </LinearLayout>
    </LinearLayout>
    <!-- Multi-line movie overview. FIND OUT IF THERE'S A MAX CHARS FOR THIS -->
    <TextView
        android:id="@+id/tv_overview"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/margin_20"
        android:textSize="20sp"
        android:text="@string/text_overview"/>
    <!-- Container holding "Trailers:" label, first trailer title and play button -->
    <RelativeLayout
        android:id="@+id/trailer_container"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_weight="1">
        <TextView
            android:id="@+id/lab_trailers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:textSize="25sp"
            android:text="@string/label_trailers"/>
        <TextView
            android:id="@+id/lab_trailer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/lab_trailers"
            android:textSize="20sp"
            android:text="@string/label_trailer"/>
    </RelativeLayout>
</LinearLayout>
